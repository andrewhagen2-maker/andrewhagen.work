# QR Tracking Tool — Google Sheets API credentials
# Copy this file to .env and fill in real values
# Never commit .env to git

# Service account email from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private key from the service account JSON (include the full -----BEGIN/END----- lines)
# In .env, keep it on one line with literal \n between lines
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# The ID from your Google Sheet URL:
# https://docs.google.com/spreadsheets/d/THIS_PART_HERE/edit
GOOGLE_SHEET_ID=your_sheet_id_here

# Supabase — Authorized Seller Registry
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Simple password gate for the reseller registry admin UI
REGISTRY_PASSWORD=yourchosenpassword
